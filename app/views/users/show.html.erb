<%= provide :title, @user.name %>
<h1>
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</h1>
<p><%= t("users.created_at") %> : <%= @user.created_at %></p>
<p><%= t("users.updated_at") %> : <%= @user.updated_at %></p>
<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>">
      <%= message %>
  </div>
<% end %>
