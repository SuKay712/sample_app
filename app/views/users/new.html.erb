<% provide :title, t("sign_up") %>
<h1><%= t "sign_up" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name, t("users.name") %>
      <%= f.text_field :name %>
      <%= f.label :email, t("users.email") %>
      <%= f.text_field :email %>
      <%= f.label :password, t("users.password") %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, t("users.confirmation") %>
      <%= f.password_field :password_confirmation %>
      <%= f.label :birthday, t("users.birthday") %>
      <%= f.date_field :birthday %>
      <%= f.label :gender, t("users.gender") %>
      <%= f.select :gender, t("genders").split(",") %>
      <%= f.submit t("users.new_user"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
