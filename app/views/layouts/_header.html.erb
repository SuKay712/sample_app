<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", static_pages_home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("title.home_title"), static_pages_home_path %></li>
        <li><%= link_to t("title.help_title"), static_pages_help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("users.title"), current_user %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: { toggle: "dropdown" }, id: "account" do %>
              <%= t("users.account") %>
              <b class="caret"></b>
            <% end %>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to t("users.profile"), current_user %></li>
              <li><%= link_to t("setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("log_out"), logout_path, data: { turbo_method: :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
